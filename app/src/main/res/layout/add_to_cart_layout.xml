<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">


    <ImageView
        android:id="@+id/badge_image_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/thumb_content_desc"
        android:padding="5dp"
        android:src="@drawable/ic_shopping_cart_black_36dp" />

    <TextView
        android:id="@+id/badge_textView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@id/badge_image_add_to_cart"
        android:layout_alignRight="@id/badge_image_add_to_cart"
        android:layout_alignTop="@id/badge_image_add_to_cart"
        android:background="@drawable/cart_badge"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="12sp" />
</RelativeLayout>